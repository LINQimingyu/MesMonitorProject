<UserControl
    x:Class="MesProject.Controls.MainControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MesProject.ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MesProject.Controls"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MesProject.ViewModels"
    d:Background="#14273a"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
    d:DesignHeight="750"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="CountTemplate">
            <Border
                Width="15"
                Margin="2,0"
                Background="#3318aabd">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="White"
                    Text="{Binding}" />
            </Border>
        </DataTemplate>

        <ItemsPanelTemplate x:Key="CountItemsPanelTemplate">
            <StackPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>

    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel
                Grid.Column="0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="10"
                    VerticalAlignment="Center"
                    FontFamily="{StaticResource DigitalDisplayFont}"
                    FontSize="30"
                    Foreground="White"
                    Text="{Binding TimeStr}" />
                <StackPanel Margin="0,10" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="14"
                        Foreground="White"
                        Text="{Binding DateStr}" />
                    <TextBlock
                        HorizontalAlignment="Center"
                        FontSize="14"
                        Foreground="White"
                        Text="{Binding WeekStr}" />
                </StackPanel>
            </StackPanel>

            <StackPanel
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <TextBlock
                    Margin="0,0,10,0"
                    Foreground="White"
                    Text="机台&#13;总数" />
                <ItemsControl
                    ItemTemplate="{StaticResource CountTemplate}"
                    ItemsPanel="{StaticResource CountItemsPanelTemplate}"
                    ItemsSource="{Binding MachineCount}" />

                <TextBlock
                    Margin="30,0,10,0"
                    Foreground="White"
                    Text="生产&#13;计数" />
                <ItemsControl
                    ItemTemplate="{StaticResource CountTemplate}"
                    ItemsPanel="{StaticResource CountItemsPanelTemplate}"
                    ItemsSource="{Binding ProductCount}" />

                <TextBlock
                    Margin="30,0,10,0"
                    Foreground="White"
                    Text="不良&#13;计数" />
                <ItemsControl
                    ItemTemplate="{StaticResource CountTemplate}"
                    ItemsPanel="{StaticResource CountItemsPanelTemplate}"
                    ItemsSource="{Binding UnqualifiedCount}" />
            </StackPanel>

            <Button
                Grid.Column="2"
                Width="65"
                Height="35"
                Margin="20,0"
                VerticalAlignment="Center"
                Click="SettingsButton_Click"
                Content="配置"
                Style="{StaticResource RegularButtonStyle}"
                Tag="&#xe625;" />
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <UniformGrid
                Grid.Column="0"
                Margin="10"
                Columns="1">
                <!--  环境  -->
                <GroupBox Header="环境">
                    <ItemsControl HorizontalAlignment="Center" ItemsSource="{Binding EnvironmentModels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="22"
                                        Foreground="#2bedf1"
                                        Text="{Binding Value}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Foreground="White"
                                        Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </GroupBox>

                <!--  产能  -->
                <GroupBox Margin="0,5" Header="产能">
                    <Grid>
                        <lvc:CartesianChart
                            Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=GroupBox}, Converter={converters:ChartHeightConverter}}"
                            Series="{Binding CapacitySeries}"
                            TooltipTextSize="10"
                            XAxes="{Binding CapacityXAxes}"
                            YAxes="{Binding CapacityYAxes}" />

                        <StackPanel
                            Margin="0,0,10,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Orientation="Horizontal">
                            <Border
                                Width="6"
                                Height="6"
                                Margin="0,0,5,0"
                                Background="#2196f3" />
                            <TextBlock
                                FontSize="10"
                                Foreground="White"
                                Text="生产计数" />
                            <Border
                                Width="6"
                                Height="6"
                                Margin="5,0"
                                Background="IndianRed" />
                            <TextBlock
                                FontSize="10"
                                Foreground="White"
                                Text="不良计数" />
                        </StackPanel>
                    </Grid>
                </GroupBox>

                <!--  质量  -->
                <GroupBox Header="质量">
                    <lvc:CartesianChart
                        Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=GroupBox}, Converter={converters:ChartHeightConverter}}"
                        Series="{Binding QualitySeries}"
                        TooltipTextSize="10"
                        XAxes="{Binding QualityXAxes}"
                        YAxes="{Binding QualityYAxes}" />
                </GroupBox>
            </UniformGrid>

            <Grid Grid.Column="1" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Source="/Resource/Images/device.png" />

                <!--  报警记录  -->
                <Grid Grid.Row="1" Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                        <TextBlock
                            Margin="0,0,5,0"
                            VerticalAlignment="Center"
                            FontFamily="{StaticResource IconFont}"
                            FontSize="16"
                            Foreground="White"
                            Text="&#xe68d;" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="White"
                            Text="报警记录" />
                    </StackPanel>

                    <ItemsControl Grid.Row="1" ItemsSource="{Binding AlarmModels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="50" />
                                    </Grid.ColumnDefinitions>

                                    <Ellipse
                                        Grid.Column="0"
                                        Width="5"
                                        Height="5"
                                        Margin="0,0,10,0"
                                        Fill="Red" />
                                    <TextBlock
                                        Grid.Column="1"
                                        Margin="0,0,5,0"
                                        Foreground="#992bedf1"
                                        Text="{Binding Num}" />
                                    <TextBlock
                                        Grid.Column="2"
                                        Margin="0,0,5,0"
                                        Foreground="#992bedf1"
                                        Text="{Binding Message}" />
                                    <TextBlock
                                        Grid.Column="3"
                                        Margin="0,0,10,0"
                                        Foreground="#992bedf1"
                                        Text="{Binding DateTime, StringFormat={}{0:yyyy-MM-dd HH:mm:ss}}" />
                                    <TextBlock
                                        Grid.Column="4"
                                        Foreground="#992bedf1"
                                        Text="{Binding Duration, StringFormat=时长{0}秒}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>

                <!--  数据异常报警比例  -->
                <GroupBox Grid.Row="2" Header="数据异常报警比例">
                    <lvc:PieChart Height="{Binding ActualHeight, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=GroupBox}, Converter={converters:ChartHeightConverter}}" Series="{Binding AlarmSeries}" />
                </GroupBox>

            </Grid>

            <UniformGrid
                Grid.Column="2"
                Margin="10"
                Columns="1">

                <!--  设备  -->
                <GroupBox Header="设备">
                    <ItemsControl HorizontalAlignment="Center" ItemsSource="{Binding DeviceModels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="10">
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="22"
                                        Foreground="#2bedf1"
                                        Text="{Binding Value}" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="12"
                                        Foreground="White"
                                        Text="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                </GroupBox>

                <!--  能耗  -->
                <GroupBox Margin="0,5" Header="能耗">
                    <!--<local:RadarChartControl  />-->
                    <local:RadarChartControl
                        Height="{Binding RelativeSource={RelativeSource AncestorType=GroupBox}, Path=ActualHeight, Converter={converters:ChartHeightConverter}}"
                        Margin="40,0,0,-50"
                        HorizontalAlignment="Center"
                        LayerStroke="#66ffffff"
                        RadialBrush="#66ffffff"
                        Radials="5"
                        Radius="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight, Converter={converters:HeightToRadiusConverter}}"
                        ShowTitle="True"
                        TitleFontSize="12"
                        TitleForground="White"
                        Titles="{Binding RadarTitles}"
                        Values="{Binding RadarValues}" />
                </GroupBox>

                <!--  人力  -->
                <GroupBox Header="人力" />

            </UniformGrid>
        </Grid>

        <ItemsControl
            Grid.Row="2"
            Margin="10,0,5,10"
            ItemsSource="{Binding WorkshopModels}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border
                        Margin="0,0,5,0"
                        BorderBrush="#9918aabd"
                        BorderThickness="1"
                        CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <TextBlock
                                    Margin="10"
                                    Foreground="White"
                                    Text="{Binding Name}" />
                                <TextBlock Margin="10" HorizontalAlignment="Right">
                                    <Hyperlink
                                        Command="{Binding DataContext.ShowWorkshopDetailCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        Foreground="White"
                                        TextDecorations="None">
                                        [详情]
                                    </Hyperlink>
                                </TextBlock>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <TextBlock Foreground="White" Text="机台总数" />
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        FontSize="26"
                                        Foreground="White"
                                        Text="{Binding TotalNum}" />
                                </StackPanel>

                                <Grid Grid.Column="1" Margin="0,0,0,10">
                                    <UniformGrid>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="14"
                                                Foreground="LightSeaGreen"
                                                Text="{Binding WorkingNum}" />
                                            <TextBlock Foreground="White" Text="作业" />
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="14"
                                                Foreground="Orange"
                                                Text="{Binding WaitingNum}" />
                                            <TextBlock Foreground="White" Text="等待" />
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="14"
                                                Foreground="Red"
                                                Text="{Binding BreakdownNum}" />
                                            <TextBlock Foreground="White" Text="故障" />
                                        </StackPanel>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                FontSize="14"
                                                Foreground="Gray"
                                                Text="{Binding HaltNum}" />
                                            <TextBlock Foreground="White" Text="停机" />
                                        </StackPanel>
                                    </UniformGrid>
                                </Grid>

                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="1" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
