<UserControl
    x:Class="MesProject.Controls.WorkshopDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:attached="clr-namespace:MesProject.AttachedProperties"
    xmlns:converter="clr-namespace:MesProject.ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MesProject.Controls"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:MesProject.ViewModels"
    d:DataContext="{d:DesignInstance vm:WorkshopDetailViewModel}"
    d:DesignHeight="750"
    d:DesignWidth="1200"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Background" Value="#bbbbbb" />
            <Setter Property="Width" Value="50" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="Orange" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid attached:AnimationAttachedProperties.FadeInAndSlideFromBottom="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Margin="20,10">
            <Button
                Width="65"
                Height="35"
                HorizontalAlignment="Left"
                Command="{Binding DataContext.ShowIndexCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                Content="返回"
                Style="{StaticResource RegularButtonStyle}"
                Tag="&#xe632;" />
            <StackPanel
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="White"
                    Text="机台状态:" />
                <RadioButton
                    VerticalAlignment="Center"
                    Content="全部"
                    IsChecked="True" />
                <RadioButton Content="作业" />
                <RadioButton Content="等待" />
                <RadioButton Content="故障" />
                <RadioButton Content="停机" />
            </StackPanel>
        </Grid>

        <!--  机台工作进度圆环  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="10,5"
            HorizontalScrollBarVisibility="Disabled"
            VerticalScrollBarVisibility="Hidden">
            <ItemsControl ItemsSource="{Binding MachineModels}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="5" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Height="250"
                            Margin="10,5"
                            Padding="5"
                            BorderBrush="#9918aabd"
                            BorderThickness="0,1,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <Grid Margin="0,10,0,0">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        FontSize="12"
                                        Foreground="White">
                                        <Run FontFamily="{StaticResource IconFont}" Text="&#xe661;" />
                                        <Run Text="{Binding Name}" />
                                    </TextBlock>

                                    <StackPanel
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Ellipse
                                            Width="8"
                                            Height="8"
                                            Fill="LightGreen" />
                                        <TextBlock
                                            Margin="5,0,0,0"
                                            Foreground="LightGreen"
                                            Text="{Binding Status}" />
                                    </StackPanel>
                                </Grid>

                                <local:RingControl Grid.Row="1" Percent="{Binding CompleteRate}" />

                                <TextBlock
                                    Grid.Row="2"
                                    VerticalAlignment="Center"
                                    Foreground="White">
                                    <Run Foreground="#55ffffff" Text="任务进度: " />
                                    <Run Text="{Binding CompleteNum}" />
                                    <Run Text="/" />
                                    <Run Text="{Binding PlanNum}" />
                                </TextBlock>

                                <TextBlock
                                    Grid.Row="2"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Center">
                                    <Hyperlink
                                        Command="{Binding DataContext.ShowStackedColumnChartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        Foreground="#55ffffff"
                                        TextDecorations="None">
                                        [详情]
                                    </Hyperlink>
                                </TextBlock>

                                <TextBlock
                                    Grid.Row="3"
                                    Margin="0,5,0,0"
                                    VerticalAlignment="Center"
                                    Foreground="White">
                                    <Run Foreground="#55ffffff" Text="工单: " />
                                    <Run Text="{Binding OrderNo}" />
                                </TextBlock>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!--  特定机台效率趋势图  -->
        <Border
            Grid.Row="1"
            Height="350"
            VerticalAlignment="Bottom"
            attached:AnimationAttachedProperties.FadeInAndSlideFromBottom="{Binding IsShowStackedColumnChart}"
            Background="#f5f7f9fa"
            Visibility="Hidden">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock
                    Margin="10"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontSize="18"
                    Foreground="#666666"
                    Text="机台效率趋势图" />
                <Button
                    HorizontalAlignment="Right"
                    Command="{Binding CloseStackedColumnChartCommand}"
                    Content="&#xe609;"
                    Foreground="#666666"
                    Style="{StaticResource MachineCloseButtonStyle}" />

                <StackPanel
                    Grid.Row="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Rectangle
                        Width="8"
                        Height="8"
                        Margin="20,0,5,0"
                        Fill="LightGreen" />
                    <TextBlock Text="作业" />
                    <Rectangle
                        Width="8"
                        Height="8"
                        Margin="20,0,5,0"
                        Fill="Orange" />
                    <TextBlock Text="等待" />
                    <Rectangle
                        Width="8"
                        Height="8"
                        Margin="20,0,5,0"
                        Fill="PaleVioletRed" />
                    <TextBlock Text="故障" />
                    <Rectangle
                        Width="8"
                        Height="8"
                        Margin="20,0,5,0"
                        Fill="LightGray" />
                    <TextBlock Text="停机" />
                </StackPanel>

                <StackPanel
                    Grid.Row="1"
                    Margin="0,0,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <RadioButton Content="当日" />
                    <RadioButton Content="当周" />
                    <RadioButton Content="当月" />
                    <RadioButton Content="当年" />
                </StackPanel>

                <lvc:CartesianChart
                    Grid.Row="2"
                    Margin="10"
                    Series="{Binding ColumnSeries}"
                    XAxes="{Binding XAxes}"
                    YAxes="{Binding YAxes}" />

            </Grid>
        </Border>
    </Grid>
</UserControl>
