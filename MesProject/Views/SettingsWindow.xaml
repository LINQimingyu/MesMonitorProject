<Window
    x:Class="MesProject.Views.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MesProject.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsWindow"
    Width="800"
    Height="450"
    FontFamily="Microsoft YaHei"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="1" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Height" Value="30" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Height="{TemplateBinding Height}" Background="{TemplateBinding Background}">
                            <ContentPresenter
                                Margin="10,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Gainsboro" />
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#18aabd" />
                    <Setter Property="Foreground" Value="White" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            Grid.ColumnSpan="2"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center">
            <Run FontFamily="{StaticResource IconFont}" Text="&#xe625;" />
            <Run FontSize="14" Text="系统配置信息" />
        </TextBlock>

        <Button
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            Click="CloseButton_Click"
            Content="&#xe609;"
            Foreground="Black"
            Style="{StaticResource WindowCloseButtonStyle}" />

        <Border
            Grid.Row="1"
            Grid.Column="0"
            BorderBrush="Gray"
            BorderThickness="0,0,1,0">
            <StackPanel>
                <RadioButton Content="设备清单" IsChecked="True" />
                <RadioButton Content="环境监测" />
                <RadioButton Content="设备监测" />
                <RadioButton Content="配置一" />
                <RadioButton Content="配置二" />
            </StackPanel>
        </Border>

    </Grid>
</Window>
